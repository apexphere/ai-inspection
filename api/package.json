{
  "name": "@ai-inspection/api",
  "version": "0.1.0",
  "private": true,
  "description": "Backend API service (Express + Prisma)",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
